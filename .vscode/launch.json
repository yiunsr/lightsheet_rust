    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lightsheet_rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lightsheet_rust/",
                    "--package=lightsheet_rust"
                ],
                "filter": {
                    "name": "lightsheet_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "D:\\workspace\\vscode\\lightsheet_rust\\src-tauri",
            "relativePathBase": "./src-tauri"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug OSX",
            "program": "${workspaceRoot}/src-tauri/target/debug/lightsheet-rust",
            "args": [],
            "cwd": "${workspaceRoot}/src-tauri",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lightsheet_rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=lightsheet_rust",
                    "--package=lightsheet_rust"
                ],
                "filter": {
                    "name": "lightsheet_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
